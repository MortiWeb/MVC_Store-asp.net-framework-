<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="fixed-top bg-dark">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark w-100 p-0">

                @Html.ActionLink("MVC5 Store", "Main", "Shop", "", new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav mr-auto">
                        @Html.Action("ServiceMenuPartial", "Pages")
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li>
                            <a class="nav-link" href="#">Shopping Cart</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="container body-content">
        <div class="row pt-4">

            @if (ViewBag.Sidebar == "OK")
            {
                <div class="col-12 col-sm-12 col-md-3">
                    @Html.Action("CategoryPartial", "Shop")
                </div>
                <div class="col">
                    @RenderBody()
                </div>
                <div class="col-12 col-sm-12 col-md-3">
                    @Html.Action("SideBarPartial", "Pages")
                </div>
            }
            else
            {
                <div class="col-12 col-sm-12 col-md-3">
                    @Html.Action("CategoryPartial", "Shop")
                </div>
                <div class="col">
                    @RenderBody()
                </div>
            }
        </div>
        <hr />
        <div class="row">
            <footer>
                <p>&copy; @DateTime.Now.Year - My MVC ASP.NET STORE</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
